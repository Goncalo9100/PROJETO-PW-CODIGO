<!DOCTYPE html>
<html lang="PT" id="html">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, install-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="styles/header_menu.css">
    <link rel="stylesheet" href="styles/pagina_ofertas_emprego.css">
    <script src="scripts/script_ofertas2.js"> </script>
    <script src="scripts/output.js"> </script>
    <title>Ofertas de Emprego</title>
</head>

<body>
    <div class="div_header">
        <img class="img_logo" src="imagens/logo_com_nome.png">
        <a class="a_login" onclick="window.location.href='http://127.0.0.1:5502/pagina_login.html'">Login</a>
        <a class="a_register" onclick="window.location.href='http://127.0.0.1:5502/pagina_registo.html'">Registo</a>
    </div>

    <div class="div_menu">
        <button class="btn_menu_sobre"
            onclick="window.location.href='http://127.0.0.1:5502/pagina_inicial.html'">Sobre nós</button>
        <button class="btn_menu_portefolios"
            onclick="window.location.href='http://127.0.0.1:5502/pagina_portefolios.html'">Portefólios</button>
        <button class="btn_menu_ofertas">Ofertas Emprego</button>
        <button class="btn_menu_amigos"
            onclick="window.location.href='http://127.0.0.1:5502/pagina_amigos.html'">Amigos</button>
        <button class="btn_menu_empresas"
            onclick="window.location.href='http://127.0.0.1:5502/pagina_empresas.html'">Empresas</button>
    </div>

    <div class="div_body_procura">
        <input class="input_procura" id="input_procura" type="text" placeholder="Procurar Empresa" name="search">
        <button class="btn_procura" id="btn_procura">Filtrar</button>
    </div>

    <div class="div_body_container">
        <div class="div_body_filtro">
            <div class="div_container_left_filtros_empresas" id="div_container_left_filtros_empresas">
                <!--<form name="form_filtro_ofertas">-->
                <h1 class="h1_container_left_filtro">Filtrar Ofertas por:</h1>

                <h1 class="h1_container_left_duracao">Duração:</h1>
                <div class="div_container_left_filtros_ofertas_radio">
                    <input type="radio" class="radio_dur" id="um_ano" name="dur" value="um_ano">
                    <label for="um_ano">Até 1 Ano</label><br>
                    <input type="radio" class="radio_dur" id="um_a_cinco" name="dur" value="um_a_cinco">
                    <label for="um_a_cinco">De 1 a 5 Anos</label><br>
                    <input type="radio" class="radio_dur" id="cinco_mais" name="dur" value="cinco_mais">
                    <label for="cinco_mais">5 ou mais Anos</label><br>
                </div>

                <h1 class="h1_container_left_area">Área:</h1>
                <select class="select_area" name="select_area" id="select_area">
                    <option value="nenhuma" selected="selected">Nenhuma</option>
                </select>

                <h1 class="h1_container_left_validade">Validade:</h1>
                <div class="div_container_left_filtros_ofertas_radio">
                    <input type="radio" class="radio_valid" id="recente" name="valid" value="recente">
                    <label for="recente">Mais Recente</label><br>
                    <input type="radio" class="radio_valid" id="antiga" name="valid" value="antiga">
                    <label for="antiga">Mais Antiga</label><br>
                </div>

                <h1 class="h1_container_left_remuneracao">Remuneração:</h1>
                <div class="div_container_left_filtros_ofertas_radio">
                    <input type="radio" class="radio_remun" id="menor" name="remun" value="menor">
                    <label for="menor">Menor</label><br>
                    <input type="radio" class="radio_remun" id="maior" name="remun" value="maior">
                    <label for="maior">Maior</label><br>
                </div>

                <input type="button" class="btn_ofertas_filtro" id="btn_ofertas_filtro" value="Limpar Filtro">
                <!--</form>-->
            </div>
        </div>

        <div class="div_body_ofertas" id="div_body_ofertas">
            <%if(sampleData.length> 0)
                {
                sampleData.forEach(function(results){%>
                <div id="div_oferta" class="div_oferta">
                    <div class="div_oferta_info">
                        <b>Empresa:</b>
                        <p id="p_nome_empresa" class="p_oferta_info"><%= results.nomeEmpresa %></p>
                        <p id="p_valor" class="p_oferta_info_val"><%= results.valor %> €</p>
                    </div>
                    <div class="div_oferta_info">
                        <b>Área:</b>
                        <p id="p_area_descricao" class="p_oferta_info"><%= results.areaDescricao %></p>
                    </div>
                    <div class="div_oferta_info">
                        <b>Duração:</b>
                        <p id="p_duracao" class="p_oferta_info"><%= results.duracao %></p>
                    </div>
                    <div class="div_oferta_info">
                        <b>Validade:</b>
                        <p id="p_data_validade" class="p_oferta_info"><%= results.dataValidade %></p>
                    </div>
                    <p id="p_descricao"><%= results.descricao %></p>
                    <hr class="hr_oferta">

                </div>
                <% }); } else { %>
                    <% } %>
        </div>
    </div>

    <div class="div_footer">
        <p>Copyright © 2022 Gustavo Manteigas & Gonçalo Ribeiro Inc. All rights reserved.</p>
    </div>

</body>

</html>